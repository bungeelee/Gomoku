<Window x:Class="Gomoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku"
        mc:Ignorable="d"
        Title="Gomoku - Five in a row" Height="640" Width="930">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.7*" MaxWidth="735"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <!--#region Chess board-->
        <Border BorderThickness="2"  BorderBrush="#FF598CBF" Margin="10,10,0,10">
            <Canvas x:Name="cvChessBoard" Background="#FF598CBF" Margin="0" SizeChanged="chessBoard_SizeChanged" MouseLeftButtonDown="cvChessBoard_MouseLeftButtonDown"/>
        </Border>
        <!--#endregion-->

    </Grid>
</Window>
